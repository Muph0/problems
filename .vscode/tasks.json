{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GCC active file",
            "command": "g++",
            "type": "shell",
            "args": [
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        }
    ]
}